#include <bits/stdc++.h>
using namespace std;

int main() {
	
	cout << "Please enter a number: ";
	int n;
	cin >> n;
	
	for (int i = 0; i < n; i++) {
		// prints upper-left side's stars
		int stars = n - i;
		for (int j = 0; j < stars; j++) {
			cout << "*";
		}
		
		// prints upper spaces
		int spaces = 2 * i;
		for (int j = stars; j < spaces + stars; j++) {
			cout << " ";
		}
		
		// prints upper-right spaces
		for (int j = spaces + stars; j < 2 * n; j++) {
			cout << "*";
		}
		
		cout << endl;
	}
	
	// lower half
	for (int i = 0; i < n; i++) {
		// prints lower-left side's stars
		int stars = i + 1;
		for (int j = 0; j < stars; j++) {
			cout << "*";
		}
		
		// prints lower spaces
		int spaces = 2 * (n - i - 1);
		for (int j = 0; j < spaces; j++) {
			cout << " ";
		}
		
		// prints lower-right spaces
		for (int j = 0; j < stars; j++) {
			cout << "*";
		}
		
		cout << endl;
	}
	
	
	
	
	
}